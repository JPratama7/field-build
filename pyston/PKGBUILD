shopt -s extglob

####### COMPILER
export CC=clang
export CXX=clang++
####################


pkgbase=pyston
pkgname=(pyston)
pkgver=2.3.1
pkgrel=1
_pybasever=${pkgver%.*}
pkgdesc="A fork of CPython with additional optimizations for performance"
arch=('x86_64')
license=('custom')
url="https://www.python.org/"
depends=('bzip2' 'glibc' 'db' 'gdbm' 'libffi' 'libnsl' 'libxcrypt' 'openssl' 'zlib' 'tcl' 'xz' 'expat')
makedepends=('tk' 'sqlite' 'bluez-libs' 'mpdecimal' 'llvm' 'gdb' 'xorg-server-xvfb' 'ttf-font' 'clang' 'llvm')
source=("pyston.tar.gz::https://github.com/pyston/pyston/archive/refs/tags/pyston_2.3.1.tar.gz")
sha512sums=('SKIP')


