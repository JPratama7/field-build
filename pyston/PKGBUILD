build() {
  cd pyston-pyston_2.3.1

  # PGO should be done with -O3
  CFLAGS="${CFLAGS/-O2/-O3}"

  # Disable bundled pip & setuptools
  ./configure --enable-configure \
              --prefix=/usr \
              --enable-shared \
              --with-computed-gotos \
              --enable-optimizations \
              --with-lto \
            #   --enable-ipv6 \
              --with-system-expat \
              --with-dbmliborder=gdbm:ndbm \
              --with-system-ffi \
              --with-system-libmpdec \
              --enable-loadable-sqlite-extensions \
              --without-ensurepip \
              --with-cxx-main=clang \
              --with-memory-sanitizer \
              --with-address-sanitizer
            
# Obtain next free server number for xvfb-run; this even works in a chroot environment.t

}

package() {
  optdepends=('python-setuptools'
              'python-pip'
              'mpdecimal: for decimal'
              'xz: for lzma'
              'tk: for tkinter')
  provides=('pyston')
  replaces=('pyston')

    ls
  cd pyston-pyston_2.3.1

  install -Dm644 "LICENSE" -t "$pkgdir/usr/share/licenses/pyston"
}